@model dynamic
@{
    ViewData["Title"] = "User Profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2>User Profile</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Authentication Successful!</h4>
                        <p>You are now logged in. Below are your user claims and profile information.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h4>Profile Information</h4>
                            <table class="table table-striped">
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>@Model.FirstName @Model.LastName</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <td><strong>Role:</strong></td>
                                    <td>
                                        <span class="badge @(Model.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                            @Model.Role
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>User ID:</strong></td>
                                    <td>@Model.UserId</td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="col-md-6">
                            <h4>User Claims</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Claim Type</th>
                                            <th>Claim Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (dynamic claim in Model.Claims)
                                        {
                                            <tr>
                                                <td><code>@claim.Type</code></td>
                                                <td>@claim.Value</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-primary">Back to Home</a>
                        <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

